<?xml version="1.0" encoding="utf-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.smiley360"
        version   = "1.0.0">

	<name>Smiley360</name>
	
	<!-- Customize your app and platform with the preference element. -->
	<preference name="orientation"                value="default" />
	<!-- all: default means both landscape and portrait are enabled -->
	<preference name="target-device"              value="universal" />
	<!-- all: possible values handset, tablet, or universal -->
	<preference name="fullscreen"                 value="true" />
	<!-- all: hides the status bar at the top of the screen -->
	<preference name="webviewbounce"              value="false" />
	<!-- ios: control whether the screen 'bounces' when scrolled beyond the top -->
	<preference name="stay-in-webview"            value="false" />
	<!-- ios: external links should open in the default browser, 'true' would use the webview the app lives in -->
	<preference name="exit-on-suspend"            value="true" />
	<!-- ios: if set to true, app will terminate when home button is pressed -->
	<preference name="prerendered-icon" value="true" />
	<preference name="show-splash-screen-spinner" value="true" />

	<plugin name="InAppBrowser" value="org.apache.cordova.InAppBrowser" />
	<!-- Plugins can also be added here. -->
	<!--
        <gap:plugin name="Example" />
        A list of available plugins are available at https://build.phonegap.com/docs/plugins
    -->
	
	<gap:splash src="resources/images/loadingimage_x1_iphone.png" gap:platform="ios" width="320" height="480" />
	<gap:splash src="resources/images/loadingimage_1_landscape.png" gap:platform="ios" width="500" height="300" />
	<gap:splash src="resources/images/iphone4LoadingImage.png" gap:platform="ios" width="640" height="960" />
	<gap:splash src="resources/images/4iphone_landscape_.png" gap:platform="ios" width="980" height="620" />
	<gap:splash src="resources/images/iPhone5LoadingImage.png" gap:platform="ios" width="640" height="1136" />
	<gap:splash src="resources/images/5iphone_landscape.png" gap:platform="ios" width="1156" height="620" />
	<gap:splash src="resources/images/loadingimage-r2.png" gap:platform="ios" width="1024" height="748" />
	<gap:splash src="resources/images/loadingimage-r2.png" gap:platform="ios" width="768" height="1004" />

<!-- retina iPad support: PhoneGap 2.5.0+ only -->
	<gap:splash src="resources/images/loadingimage-r2.png" gap:platform="ios" width="2048" height="1496" />
	<gap:splash src="resources/images/loadingimage-r2.png" gap:platform="ios" width="1536" height="2008" />

	<gap:plugin name="com.phonegap.plugins.facebookconnect">
    		<param name="APP_ID" value="104171846376854" />
    		<param name="APP_NAME" value="Smiley360 Staging" />
	</gap:plugin>

	<!-- Define app icon for each platform. -->
	<icon src="resources/icons/Icon.png" />	
	<!--
        Define access to external domains.

        <access />            - a blank access tag denies access to all external resources.
        <access origin="*" /> - a wildcard access tag allows access to all external resource.

        Otherwise, you can specify specific domains:
    -->
	<access origin="*" />

	<!-- allow local pages -->
	<!--
        <access origin="http://phonegap.com" />                    - allow any secure requests to http://phonegap.com/
        <access origin="http://phonegap.com" subdomains="true" />  - same as above, but including subdomains, such as http://build.phonegap.com/
        <access origin="http://phonegap.com" browserOnly="true" /> - only allows http://phonegap.com to be opened by the child browser.
    -->

</widget>
